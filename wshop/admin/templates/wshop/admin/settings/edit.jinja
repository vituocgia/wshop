{% extends "wshop/admin/base.jinja" %}
{% from "wshop/admin/macros/general.jinja" import content_with_sidebar, content_block %}
{% from "wshop/admin/macros/multilanguage.jinja" import render_monolingual_fields %}
{% block title %}{% trans %}Settings{% endtrans %}{% endblock %}

{% block content %}
    {% call content_with_sidebar(content_id="settings_form") %}
        <form method="post" id="settings_form">
            {% csrf_token %}
            {% for form_def in form.form_defs.values() %}
                {% include form_def.template_name with context %}
            {% endfor %}
        </form>
    {% endcall %}
{% endblock %}
